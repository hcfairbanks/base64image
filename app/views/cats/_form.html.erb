<%= form_for @cat, html: { multipart: true } do |f| %>
  <% if cat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cat.errors.count, "error") %> prohibited this cat from being saved:</h2>

      <ul>
      <% cat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <% if @cat.picture? %>
        <%= f.label :Current_Image %>
        <%= image_tag(cat.picture.thumb) %>
    <% else %>
        <label>Upload a Picture</label>
    <% end %>
    <br/>
    <%= f.file_field :picture %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
